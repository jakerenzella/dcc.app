---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter";
import openGraph from "assets/opengraph.png";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "DCC"
  : "DCC - A novice-focused C compiler";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-VSZW2PC5RB"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-VSZW2PC5RB");
    </script>
  </head>
  <script
    src="https://cdn.jsdelivr.net/gh/atteggiani/animated-terminal/animated-terminal.min.js"
    defer></script>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />

  <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
  <SEO
    title={makeTitle}
    description="The Debugging C Compiler (DCC) - A novice-focused C compiler."
    canonical={canonicalURL}
    twitter={{
      creator: "@jakerenzella",
      site: "@jakerenzella",
      card: "summary_large_image",
    }}
    openGraph={{
      basic: {
        url: canonicalURL,
        type: "website",
        title: `The Debugging C Compiler (DCC) - A novice-friendly C/C++ compiler`,
        image: openGraph.src,
      },
      image: {
        alt: "DCC Homepage Screenshot",
      },
    }}
  />

  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
