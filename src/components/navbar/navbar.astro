---
import { getCollection } from "astro:content";
import Container from "@components/container.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import sidekick from "../../assets/sidekick.png";
import { Image } from "astro:assets";
import Contactform from "@components/contactform.astro";

const publishedPapers = await getCollection("papers", ({ data }) => {
  return !data.draft;
});
const paperTitle = publishedPapers.length === 1 ? "Paper" : "Papers";

const menuitems = [
  {
    title: "DCC Help",
    path: "/dcc-help",
  },
  // {
  //   title: "DCC Sidekick",
  //   img: sidekick,
  //   path: "/dcc-sidekick",
  // },
  {
    title: paperTitle,
    path: "/papers",
  },
  {
    title: "Grants and Awards",
    path: "/grants",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Contact",
    path: "/contact",
  },

  // {
  //   title: "Features",
  //   path: "#",
  //   children: [
  //     { title: "Compile-time", path: "/" },
  //     { title: "Run time", path: "#" },
  //     { title: "Error Explanations", path: "#" },
  //   ],
  // },
  // {
  //   title: "DCC-help",
  //   path: "/dcc-help",
  //   sparkle: true,
  // },
] as any;
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">DCC</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li class="flex items-center">
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                      {item.img ? (
                        <Image
                          src={item.img}
                          width={120}
                          alt="DCC Sidekick logo"
                        />
                      ) : (
                        item.title
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <!-- <div class="lg:hidden flex items-center mt-3 gap-4"> -->
        <!-- <Link href="#" style="muted" block size="md">Log in</Link> -->
        <!-- <Link href="#" size="md" block>Sign up</Link> -->
        <!-- </div> -->
      </MenuItems>
    </Astronav>
    <div>
      <!-- <div class="hidden lg:flex items-center gap-4">
        <a href="#">Log in</a>
        <Link href="#" size="md">Sign up</Link>
      </div> -->
    </div>
  </header>
</Container>
